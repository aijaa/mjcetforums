<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syedsauban.mjforums.UserProfile">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">
    <ImageView
        android:layout_width="381dp"
        android:layout_height="276dp"
        android:src="@drawable/profile_background"
        tools:layout_editor_absoluteY="1dp"
        tools:layout_editor_absoluteX="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="140dp"
            android:layout_gravity="center"
            android:layout_height="140dp"
            android:src="@drawable/soban" />
    </FrameLayout>
    <TextView
        android:textColor="@color/black"
        android:textSize="25sp"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Syed Souban"


        android:layout_marginLeft="108dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="108dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:textColor="#989898"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSE III/IV"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginLeft="108dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginStart="108dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADMIN"
        android:textColor="#989898"
        android:layout_alignTop="@id/textView7"
        android:layout_alignBottom="@id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@id/textView7"
        android:layout_marginRight="108dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginEnd="108dp" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/textView9"
        app:layout_goneMarginLeft="10dp"
        android:gravity="center"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My Questions"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_editor_absoluteY="380dp" />
<View android:layout_height="1dp"
    android:layout_width="344dp"
    android:layout_margin="5dp"
    android:background="#afafaf"
    tools:layout_editor_absoluteX="8dp"
    android:id="@+id/view"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/textView9"></View>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="My Answers"
        android:textSize="20sp"
        android:gravity="center"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view" />
</android.support.constraint.ConstraintLayout>
