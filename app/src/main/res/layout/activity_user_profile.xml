<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syedsauban.mjforums.UserProfile">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">
    <ImageView
        android:layout_width="381dp"
        android:layout_height="276dp"
        android:src="@drawable/profile_background"
        tools:layout_editor_absoluteY="1dp"
        tools:layout_editor_absoluteX="2dp" />

    <FrameLayout
        android:id="@+id/profileFrame"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.facebook.login.widget.ProfilePictureView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:civ_border_width="2dp"
            android:id="@+id/profilePic"
            app:civ_border_color="#ffffff"/>
        <ImageView
            android:id="@+id/android"
            android:layout_width="140dp"
            android:layout_height="140dp"
            app:srcCompat="@drawable/subtracted_circle1"
            android:contentDescription="@null" />
    </FrameLayout>
    </FrameLayout>
    <TextView
        android:textColor="@color/black"
        android:textSize="25sp"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:layout_marginLeft="108dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="108dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button


        android:background="@null"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="My Questions"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_height="25dp"
        android:text="My Answers"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@null"
        android:id="@+id/button3"
        android:layout_width="wrap_content"


        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.502" />

</android.support.constraint.ConstraintLayout>
